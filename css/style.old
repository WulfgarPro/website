html, body {
	height:100%;
	overflow:hidden;
}

body {
	font-family: Consolas, 'Andale Mono', 'Lucida Console', 'DejaVu Sans Mono', monospace; 
	font-size: 11pt;
}

h1{
	font-size: 30pt;
	margin-top:0px;
	margin-bottom:0px;
	letter-spacing: 1px;
}

a {
        color:black;
	text-decoration: none;
	color:#36ff00;
}

a:hover {
	text-decoration: underline;
}

#page {
	display: table;
	margin: 0px auto;
	height:600px;
	border: 1px;
}

#content-container {
	display: table-cell;
	vertical-align: middle;
	height:600px;
	border: 1px;
}

#content, #banner {
	display: table-cell;
	padding:20px;
	border: 1px;
}

#content {
	text-align: right;
	border: 1px;
}
